{
  "name": "electron-vite-react-app",
  "version": "1.0.0",
  "private": true,
  "main": "main/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "npm run build:main && wait-on tcp:5173 && electron .",
    "dev:renderer": "cd renderer && npm run dev",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "cd renderer && vite build",
    "build:main": "tsc -p main/tsconfig.json",
    "watch:main": "tsc -w -p main/tsconfig.json",
    "preview": "electron .",
    "start": "electron .",
    "test": "cd main && npx ts-node test.ts"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.1"
  }
}
