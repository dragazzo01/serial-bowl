{
  "name": "serial-bowl",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/main/main.js",
  "author": "Daniel Ragazzo",
  "description": "Keeps track of your serialized stories from manga to manhwa to webnovels",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "npm run build:main && wait-on tcp:5173 && electron .",
    "dev:renderer": "cd renderer && npm run dev",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "cd renderer && npm run build",
    "build:main": "tsc -p main/tsconfig.json",
    "watch:main": "tsc -w -p main/tsconfig.json",
    "clean": "rimraf dist release",
    "prod": "npm run clean && npm run build && npx electron-builder --win --dir",
    "start": "electron .",
    "test": "cd main && tsc -p tsconfig.json && npx ts-node test.ts"
  },
  "dependencies": {
    "jsdom": "^26.1.0",
    "puppeteer": "^24.16.2"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.10",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",

    "typescript": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.yourcompany.yourapp",
    "productName": "SerialBowl",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "public/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  }
}
